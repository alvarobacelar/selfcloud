<%= simple_form_for(cloud) do |f| %>

<div class="panel panel-default">
  <div class="panel-body">
    <% if cloud.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cloud.errors.count, "erro") %></h2>

      <ul>
        <% cloud.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="row">
      <%= f.hidden_field :cloud_type %>
      <%= f.input :name, wrapper_html: {class: 'col-md-8'} %>
    </div>
    <div class="row">
      <%= f.input :description, wrapper_html: {class: 'col-md-8'} %>
      <%= f.input :access_key_id, wrapper_html: {class: 'col-md-10'} %>
      <%= f.input :secret_access_key, wrapper_html: {class: 'col-md-10'} %>
    </div>

    <div class="panel-footer">
      <%= f.submit "Salvar", class: 'btn btn-primary' %> ou
      <%= link_to "Cancelar", :back, class: 'btn btn-default' %>
      <%= link_to "Apagar", @cloud,
      method: :delete,
      class: 'btn btn-danger pull-right',
      data: { confirm: 'Tem certeza que quer apagar?' } if @cloud.persisted? %>
    </div>
  </div>
<% end %>
